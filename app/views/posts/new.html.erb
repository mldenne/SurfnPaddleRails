<h2>Please write or copy/paste your blog post here!</h2>

<% if @post.errors.any? %>
  <ul id="errors">
    <% @post.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :author_id %>
    <%= f.text_field :author_id %>
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Post Content" %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </p>
  <%= f.submit %>
<% end %>
