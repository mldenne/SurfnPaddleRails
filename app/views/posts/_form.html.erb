<% if @post.errors.any? %>
  <ul id="errors">
    <% @post.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :author_id, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :author_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Post Content", class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :image, class: "form-control" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit Post", class: "btn btn-success" %>
    </div>
  </div>



<% end %>
